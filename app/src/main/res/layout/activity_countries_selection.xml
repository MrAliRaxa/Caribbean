<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.CountriesSelection"
        android:background="@drawable/country_selection_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore d'Caribbean"
                android:textSize="35sp"
                android:textColor="@android:color/holo_blue_bright"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wellcome To \nCaribbean Explore!"
                android:textSize="35dp"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select the countrySpinnerModel you are visiting \n(Tourist) or living (locals)."
                android:textSize="15sp"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                />
            <Spinner
                android:id="@+id/countrySpinner"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="@dimen/_10sdp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/countriesSelection_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_bright"
            android:layout_alignParentBottom="true"
            android:layout_margin="40dp"
            android:text="Next"
            android:textStyle="bold"
            />
    </RelativeLayout>
</layout>
